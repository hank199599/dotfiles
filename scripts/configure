#!/usr/bin/env bash

backup() {
  local target=$1
  if [[ -e "$target" ]]; then
    if [[ ! -L "$target" ]]; then
      local extension="backup$(date +%Y%m%d_%H%M%S)"
      mv "$target" "$target.$extension"
      echo "-----> Moved your old $target config file to $target.$extension"
    fi
  fi
}

symlink() {
  local file=$1
  local target=$2
  if [[ ! -f "$target" && ! -L "$target" ]]; then
    echo "-----> Symlinking your new $target"
    ln -s $file $target
  fi
}

echo "-----> Start to link .zshrc"
backup $HOME/.zshrc
symlink $PWD/configs/.zshrc $HOME/.zshrc

echo "-----> Start to link vscode settings & keybindings"
CODE_PATH=~/Library/Application\ Support/Code/User
for name in settings.json keybindings.json; do
  target="$CODE_PATH/$name"
  backup $target
  symlink $PWD/configs/.vscode/$name $target
done

exec zsh

echo "ðŸ‘Œ Carry on with git setup!"
